<div class="container">
  <div class="row">

    <div class="col-md-12">
      <h2 class="form_h2">ログイン</h2>
    </div>

    <div class="col-md-6 offset-md-3 user_form_area">


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保存する %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", :class=>"login_submit" %>
      </div>
    <% end %>

    <div class="form_under">
      <%= render "devise/shared/links" %>
    </div><!--/.form_under-->

    </div><!--/.user_form_area-->

  </div><!--/.row-->
</div><!--/.container-->
